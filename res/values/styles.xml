<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="MyAppBaseTheme" parent="AppTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="MyAppPopupTheme" parent="ActivityPopupTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionButton.Overflow</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>
    <style name="MyAppTheme" parent="MyAppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionButton.Overflow</item>
        <item name="android:alertDialogTheme">@style/Theme_Holo_Dialog_Alert</item>
        <item name="android:alertDialogStyle">@style/AlertDialog_Sphinx</item>
        <item name="android:dialogTheme">@style/Theme_Holo_Dialog_Theme</item>
    </style>

    <!-- INICIA ALERT THEME -->
    <style name="Theme_Holo_Dialog_Alert">
        <item name="android:spinnerStyle">@style/Widget.Spinner</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.Sphinx</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorAlertDialogListItem">@android:color/darker_gray</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.Sphinx.DialogWindowTitle</item>
    </style>
    <!-- FIN ALERT THEME -->
    <!-- INICIA DIALOG THEME -->
    <style name="Theme_Holo_Dialog_Theme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Holo</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner</item>
    </style>

    <style name="DialogWindowTitle_Holo">
        <item name="android:textAppearance">@style/TextAppearance.Sphinx.DialogWindowTitle</item>
        <item name="android:background">@color/title_dialog_background</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_marginBottom">-7dp</item>
    </style>

    <style name="DialogWindowTitle.Sphinx" parent="@style/DialogWindowTitle_Holo">
        <item name="android:textAppearance">@style/TextAppearance.Sphinx.DialogWindowTitle</item>
    </style>

    <style name="TextAppearance.Sphinx.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AlertDialog_Sphinx">
        <item name="android:fullDark">@android:color/white</item>
        <item name="android:topDark">@color/title_dialog_background</item>
        <item name="android:centerDark">@android:color/white</item>
        <item name="android:bottomDark">@android:color/white</item>
        <item name="android:fullBright">@android:color/white</item>
        <item name="android:topBright">@color/title_dialog_background</item>
        <item name="android:centerBright">@android:color/white</item>
        <item name="android:bottomBright">@android:color/white</item>
        <item name="android:bottomMedium">@android:color/white</item>
        <item name="android:centerMedium">@android:color/white</item>
    </style>

    <!-- END DIALOG THEME -->
    <style name="Widget.ActionButton.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
    	<item name="android:contentDescription">overflow</item>
	</style>
    
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/bg_button_bg_main</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
    
     <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="Widget.Button.Theme" parent="@style/Widget.Button">
       <item name="android:background">@drawable/button</item>  
       <item name="android:textColor">@android:color/white</item>     
   </style>


  <style name="EditTextAppTheme" parent="android:Widget.EditText">
	  <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
	  <item name="android:textColor">#FFFFFF</item>
  </style>
  
   <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_style</item>
        <item name="android:minHeight">35dip</item>
        <item name="android:maxHeight">35dip</item>
    </style>
    <declare-styleable name="DonutChart">
        <attr name="radius" format="dimension"/>
    </declare-styleable>

    <style name="pruebatheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/bg_button_bg_main</item>
        <item name="colorPrimaryDark">@color/color_rating_select</item>
        <item name="colorAccent">#448aff</item>
        <item name="android:background">@android:color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>


    <!-- Theme Material Design J.V. -->

    <style name="AppThemeMD" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_button_bg_main</item>
        <item name="colorPrimaryDark">@color/color_rating_select</item>
        <item name="colorAccent">#448aff</item>
        <item name="colorControlHighlight">@color/bg_selected_nav_drawer_list_item</item>​
        <item name="colorControlNormal">@color/whiteA80</item>
        <item name="colorSwitchThumbNormal">@color/md_grey_200</item>
        <item name="android:colorForeground">@color/whiteA80</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/drawer_navigation</item>​
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:dialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:datePickerDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:datePickerStyle">@style/AppCompatAlertDialogStyle</item>
        <!--<item name="android:timePickerDialogTheme">@style/MyTimePickerDialogStyle</item>-->
        <!--<item name="android:background">@color/alternative_background</item>-->
        <!--<item name="android:windowBackground">@color/alternative_background</item>-->
        <!-- Navigation Drawer Arrow Style. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- Overflow Button Style. -->
        <item name="actionOverflowButtonStyle">@style/OverflowStyle</item>
    </style>

    <style name="AppThemeMDDefault" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_button_bg_main</item>
        <item name="colorPrimaryDark">@color/color_rating_select</item>
        <item name="colorAccent">#448aff</item>
        <item name="colorControlHighlight">@color/bg_selected_nav_drawer_list_item</item>​
        <item name="colorControlNormal">@color/whiteA80</item>
        <item name="colorSwitchThumbNormal">@color/md_grey_200</item>
        <item name="android:colorForeground">@color/whiteA80</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/drawer_navigation</item>​
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:popupTheme">@style/TimePicker</item>
        <item name="android:dialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:datePickerDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:datePickerStyle">@style/AppCompatAlertDialogStyle</item>
        <!--<item name="android:timePickerDialogTheme">@style/MyTimePickerDialogStyle</item>-->
        <!--<item name="android:background">@color/alternative_background</item>-->
        <!--<item name="android:windowBackground">@color/alternative_background</item>-->
        <!-- Navigation Drawer Arrow Style. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- Overflow Button Style. -->
        <item name="actionOverflowButtonStyle">@style/OverflowStyle</item>
    </style>

    <style name="MyTimePickerDialogStyle" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="showTitle">false</item>
        <item name="android:background">@color/White</item>
        <item name="colorControlActivated">@color/bg_selected_nav_drawer_list_item</item>
        <item name="colorAccent">@color/alternative_background</item>
        <item name="android:textColorPrimary">@color/bg_button_bg_main</item>
        <item name="android:textColorSecondary">@color/color_rating_select</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/bg_button_bg_main</item>
        <item name="android:textColorPrimary">@color/md_text</item>
        <item name="android:background">@color/bg_button_bg_main</item>
        <item name="colorControlHighlight">@color/bg_selected_nav_drawer_list_item</item>​
        <item name="colorControlNormal">@color/bg_button_bg_main</item>
        <item name="android:popupBackground">#ff00ff</item>
        <item name="colorPrimary">#ff00ff</item>
        <item name="colorPrimaryDark">#ffff00</item>
        <item name="android:color">#ffff00</item>
        <item name="android:colorBackground">#ffff00</item>
        <item name="android:textColorAlertDialogListItem">#ffff00</item>
        <item name="android:calendarTextColor">#ffff00</item>
        <item name="android:colorForeground">@color/bg_button_bg_main</item>
    </style>

    <!--<item name="colorSwitchThumbNormal">@color/md_grey_200</item>-->

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/White</item>
    </style>

    <style name="OverflowStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_navigation_more_vert</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">#2582B4</item>
        <item name="colorPrimaryDark">#0C6D98</item>
        <item name="colorAccent">#2582B4</item>
        <item name="colorControlActivated">@color/bg_selected_nav_drawer_list_item</item>
    </style>

