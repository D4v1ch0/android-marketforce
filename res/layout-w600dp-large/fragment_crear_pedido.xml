        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_grey">

        <EditText
            android:id="@+id/actividad_texto_respuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine|textCapSentences"
            android:minWidth="@dimen/nav_drawer_width"
            android:textAppearance="@style/EditTextAppTheme"
            android:textSize="@dimen/text_input_size"
            android:background="@color/caldroid_white"
            android:gravity="top"
            android:layout_margin="10dp"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:hint="@string/hint_comentarios"
            android:lines="3"
            android:padding="5dp">
        </EditText>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actividad_voice_to_text"
            android:src="@drawable/ic_action_mic"
            android:layout_alignTop="@+id/actividad_texto_respuesta"
            android:layout_alignRight="@+id/actividad_texto_respuesta"
            android:layout_alignEnd="@+id/actividad_texto_respuesta"
            android:clickable="true" />
