<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:gravity="center">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/marcacion_dia"
        android:textSize="@dimen/text_xsmall_size"
        android:layout_weight="0.4"
        android:textColor="@color/color_text_sky_blue"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/marcacion_fecha"
        android:textSize="@dimen/text_xsmall_size"
        android:layout_weight="1.2" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-"
        android:id="@+id/marcacion_ini_jor1"
        android:textSize="@dimen/text_xsmall_size"
        android:layout_weight="1.02"
        android:gravity="center" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-"
        android:id="@+id/marcacion_fin_jor1"
        android:textSize="@dimen/text_xsmall_size"
        android:layout_weight="1.02"
        android:gravity="center" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-"
        android:id="@+id/marcacion_ini_for2"
        android:textSize="@dimen/text_xsmall_size"
        android:layout_weight="1.02"
        android:gravity="center" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-"
        android:id="@+id/marcacion_fin_jor2"
        android:textSize="@dimen/text_xsmall_size"
        android:layout_weight="1.02"
        android:gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/marcacion_atraso"
            android:layout_gravity="center_vertical"
            android:src="@drawable/circle_shape" />
    </LinearLayout>

</LinearLayout>