<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:id="@+id/recorrido_dummy"
        android:layout_alignParentTop="true"
        android:background="@color/caldroid_white">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_map"
            android:layout_gravity="center" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/color_white_maps_list"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/linearLayout6">

        <ImageView
            android:id="@+id/recorrido_anterior"
            style="@style/Widget.Button.Theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            android:src="@drawable/ic_action_previous_item" />

        <TextView
            android:id="@+id/recorrido_dia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_text_sky_blue"
            android:layout_weight="1"
            android:gravity="center" />

        <ImageView
            android:id="@+id/recorrido_siguiente"
            style="@style/Widget.Button.Theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            android:src="@drawable/ic_action_next_item_dark" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@color/color_white_maps_list">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/label_punto_inicio"
            android:drawableLeft="@drawable/markerstart"
            android:id="@+id/textView12"
            android:gravity="center|right"
            android:padding="3dp"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/label_ultimo_punto"
            android:drawableLeft="@drawable/markerend"
            android:id="@+id/textView17"
            android:gravity="center|right"
            android:padding="3dp"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/label_senso"
            android:drawableLeft="@drawable/markerpoint"
            android:drawablePadding="15dp"
            android:id="@+id/textView16"
            android:gravity="center|right"
            android:padding="3dp"
            android:textSize="@dimen/text_small_size"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />
    </LinearLayout>

</RelativeLayout>
