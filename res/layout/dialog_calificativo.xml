<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/normal_space"
    android:background="@color/alternative_background">

    <!-- Titulo -->
    <TextView
        android:fontFamily="sans-serif"
        android:textColor="@color/md_text"
        android:textSize="15sp"
        android:id="@+id/tvLlamada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="RP3 Market Force"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Scroll -->
        <ScrollView
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Empty Content -->
                <LinearLayout
                    android:visibility="gone"
                    android:background="@drawable/square_background"
                    android:id="@+id/lyContentEmpty"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="40dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_weight="0.1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_interrogative_calification"
                        android:tint="?attr/colorPrimary"/>

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/md_secondary_text_icons"
                        android:id="@+id/tvSinRelacion"
                        android:text="Sin relacion con Oncosalud."
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Data Content -->
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/lyDataContent"
                    android:background="@drawable/square_background"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Letra A Segmento Content -->
                    <LinearLayout
                        android:visibility="visible"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/lySegmentoContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:id="@+id/tvSegmentoStar"
                            android:text="A"
                            android:textColor="@color/md_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:visibility="visible"
                        android:id="@+id/viewSeparatorAwithStar"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_grey"
                        />

                    <!-- Stars Content -->
                    <LinearLayout
                        android:visibility="visible"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/lyStarsContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/iv_star_empty"/>
                        <ImageView
                            android:id="@+id/iv2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/iv_star_empty"/>
                        <ImageView
                            android:id="@+id/iv3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/iv_star_empty"/>
                        <ImageView
                            android:id="@+id/iv4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/iv_star_empty"/>
                        <ImageView
                            android:id="@+id/iv5"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/iv_star_empty"/>
                        <ImageView
                            android:id="@+id/iv6"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/iv_star_empty"/>
                    </LinearLayout>

                    <View
                        android:visibility="visible"
                        android:id="@+id/viewSeparatorStarwithHijo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_grey"
                        />
                    <!-- Hijo Content -->
                    <RelativeLayout
                        android:visibility="visible"
                        android:id="@+id/lyHijosContent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvHijosCountt"
                            android:textColor="@color/md_text"
                            android:text="Hijos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RelativeLayout
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/tvHijosCountt">
                            <ImageView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/circle_shape_count_hijos" />
                            <TextView
                                android:background="@drawable/circle_shape_count_hijos"
                                android:id="@+id/tvCantidadHijos"
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:gravity="center"
                                android:textColor="@color/whiteA80" />
                        </RelativeLayout>
                        <!-- Temporal RELACION ONCOSALUD -->
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tvRelacionOncosalud"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SIN ONCOSALUD"
                            android:textColor="@color/md_text"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            />

                    </RelativeLayout>

                    <View
                        android:visibility="visible"
                        android:id="@+id/viewSeparatorHijowithFamiliar"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_grey"
                        />

                    <!-- Familiar Content -->
                    <LinearLayout
                        android:visibility="visible"
                        android:layout_marginTop="5dp"
                        android:id="@+id/lyFamiliarContent"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <!-- Financiera Content-->
                        <LinearLayout
                            android:layout_marginLeft="16dp"
                            android:orientation="vertical"
                            android:id="@+id/lyFinancieraContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/md_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:alpha="0.7"
                                android:textSize="16sp"
                                android:text="Financiera"/>
                            <TextView
                                android:layout_marginTop="3dp"
                                android:id="@+id/tvBancarizado"
                                android:text="Bancarizado:"
                                android:textColor="@color/md_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tvsbs"
                                android:layout_marginTop="1dp"
                                android:text="SBS:"
                                android:textColor="@color/md_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tvtdc"
                                android:layout_marginTop="1dp"
                                android:text="TDC:"
                                android:textColor="@color/md_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tvcantidadtdc"
                                android:layout_marginTop="1dp"
                                android:text="Cantidad TDC:"
                                android:textColor="@color/md_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tvcantidadbanco"
                                android:layout_marginTop="1dp"
                                android:text="Cantidad Banco:"
                                android:textColor="@color/md_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tvdislineatdc"
                                android:layout_marginTop="1dp"
                                android:text="Disponibilidad Linea TDC:"
                                android:textColor="@color/md_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tvdismayorlineatdc"
                                android:layout_marginTop="1dp"
                                android:text="Disponibilidad Mayor Linea TDC:"
                                android:textColor="@color/md_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <View
                            android:visibility="visible"
                            android:id="@+id/viewSeparatorFinancierawithLaboral"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_grey"
                            />
                        <!-- Laboral Content -->
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:orientation="vertical"
                            android:id="@+id/lyLaboralContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/md_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:alpha="0.7"
                                android:textSize="16sp"
                                android:text="Laboral"/>
                            <TextView
                                android:visibility="visible"
                                android:layout_marginTop="3dp"
                                android:id="@+id/tvDependencia"
                                android:text="Dependencia:"
                                android:textColor="@color/md_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"/>
                            <TextView
                                android:layout_marginTop="3dp"
                                android:id="@+id/tvRangoPromedioIngreso"
                                android:text="Rango Promedio Ingreso:"
                                android:textColor="@color/md_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/viewSeparatorFamiliarwithAfiliado"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_grey"
                        />

                    <!-- Afiliado Content -->
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:id="@+id/lyAfiliadoContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/md_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:alpha="0.7"
                            android:textSize="16sp"
                            android:text="Relación con AUNA"/>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tvRelacionOncosaludAfiliado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SIN ONCOSALUD"
                            android:textColor="@color/md_text"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            />
                        <TextView

                            android:layout_marginTop="3dp"
                            android:id="@+id/tvDocumentoAfiliado"
                            android:text="DNI:"
                            android:textColor="@color/md_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="1dp"
                            android:id="@+id/tvPlanAfiliado"
                            android:text="ONCOSALUD:"
                            android:textColor="@color/md_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="1dp"
                            android:id="@+id/tvTitularAfiliado"
                            android:text="TITULAR"
                            android:textColor="@color/md_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="1dp"
                            android:id="@+id/tvGFAfiliado"
                            android:text="GF:"
                            android:textColor="@color/md_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <!-- Cerrar Content -->
        <LinearLayout
            android:layout_weight="0.1"
            android:id="@+id/lyCerrar"
            android:layout_marginTop="5dp"
            android:background="@drawable/square_background"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="3dp"
            android:layout_below="@+id/llAddress"
            android:paddingRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/btnCerrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/button_padding"
                android:text="Cerrar"
                android:textSize="15sp"

                android:textColor="@color/md_secondary_text_icons" />

        </LinearLayout>
    </LinearLayout>





</LinearLayout>