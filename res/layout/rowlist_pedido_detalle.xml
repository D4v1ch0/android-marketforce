<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="12534678"
        android:id="@+id/pedido_detalle_sku"
        android:layout_weight="0.15"
        android:textSize="@dimen/text_xsmall_size"
        android:lines="2"
        android:maxLines="2"
        android:gravity="center" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pantaloneta de Lino Marca Acme"
        android:id="@+id/pedido_detalle_descripcion"
        android:layout_weight="0.5"
        android:textSize="@dimen/text_xsmall_size"
        android:lines="2"
        android:maxLines="2"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="5"
        android:id="@+id/pedido_detalle_cantidad"
        android:layout_weight="0.1"
        android:textSize="@dimen/text_xsmall_size"
        android:lines="2"
        android:maxLines="2"
        android:gravity="center" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="₡ 24.000"
        android:id="@+id/pedido_detalle_unitario"
        android:layout_weight="0.2"
        android:textSize="@dimen/text_xsmall_size"
        android:gravity="center_vertical|right" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="(₡ 10.000)"
        android:id="@+id/pedido_detalle_descuento"
        android:layout_weight="0.2"
        android:textSize="@dimen/text_xsmall_size"
        android:gravity="center_vertical|right" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="₡ 12.000"
        android:id="@+id/pedido_detalle_impuesto"
        android:layout_weight="0.2"
        android:textSize="@dimen/text_xsmall_size"
        android:gravity="center_vertical|right" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="₡ 122.000"
        android:id="@+id/pedido_detalle_valor_total"
        android:layout_weight="0.2"
        android:textSize="@dimen/text_xsmall_size"
        android:gravity="center_vertical|right" />
</LinearLayout>