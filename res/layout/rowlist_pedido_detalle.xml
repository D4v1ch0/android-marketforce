<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/pedido_detalle_sku"
        android:layout_weight="0.15"
        android:textSize="@dimen/text_xsmall_size"
        android:lines="2"
        android:maxLines="2"
        android:gravity="center" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/pedido_detalle_descripcion"
        android:layout_weight="0.5"
        android:textSize="@dimen/text_xsmall_size"
        android:lines="2"
        android:maxLines="2"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/pedido_detalle_cantidad"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.11"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/text_xsmall_size"
        android:visibility="visible" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="₡ 24.000"
        android:id="@+id/pedido_detalle_unitario"
        android:layout_weight="0.2"
        android:textSize="@dimen/text_xsmall_size"
        android:gravity="center_vertical|right"
        android:visibility="gone" />

    <TextView
        android:id="@+id/pedido_detalle_descuento"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.17"
        android:gravity="center_vertical|right"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/text_xsmall_size"
        android:visibility="visible" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="₡ 12.000"
        android:id="@+id/pedido_detalle_impuesto"
        android:layout_weight="0.2"
        android:textSize="@dimen/text_xsmall_size"
        android:gravity="center_vertical|right"
        android:visibility="gone" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/pedido_detalle_valor_total"
        android:layout_weight="0.2"
        android:textSize="@dimen/text_xsmall_size"
        android:gravity="center_vertical|right"
        android:paddingRight="3dp"
        android:background="@color/color_fondo_total" />
</LinearLayout>