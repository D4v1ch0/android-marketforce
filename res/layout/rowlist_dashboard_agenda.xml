<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:gravity="center" >

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp" >

            <ImageView
                android:id="@+id/dashboard_agenda_imagen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/user" />

            <ImageView
                android:id="@+id/import_item_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/circulo" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/dashboard_agenda_rowlist_nombre"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="2"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/text_small_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dashboard_agenda_phone"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/text_feedback"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:id="@+id/dashboard_agenda_mail"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/text_feedback"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:id="@+id/dashboard_agenda_hora"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/gray_clock"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:id="@+id/dashboard_agenda_tiempo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:gravity="center_vertical"
            android:lines="2"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_text_sky_blue"
            android:textSize="@dimen/text_small_size"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>