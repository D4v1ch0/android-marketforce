<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="AFILIADO # 1"
        android:id="@+id/afiliado_numero_movil"
        android:textColor="@color/White"
        android:paddingLeft="12dp"
        android:paddingTop="5dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:paddingRight="8dp"
        android:paddingBottom="5dp"
        android:background="?attr/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="5dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColorHint="?attr/colorPrimary">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tvafiliado_fecha_movil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:gravity="center"
                android:hint="Fecha de nacimiento"
                android:inputType="date"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:textColor="@color/md_text"
                android:textColorHint="@color/colorGray"
                android:textSize="13sp" />
        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_grey_lines"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="3dp"
            android:paddingBottom="5dp"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="2dp"
                android:paddingTop="1dp"
                android:background="@drawable/spinner_background"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/afiliado_sexo_movil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="0.4"
                    android:background="@android:color/transparent"
                    android:popupTheme="@style/TimePicker"
                    android:spinnerMode="dialog" />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:tint="@color/md_text"
                    android:layout_weight="0.1"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/md_text"
                    android:src="@drawable/ic_action_arrow_drop"/>

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_lines"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.4">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.30"
                    android:gravity="center_horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="20dp"
                    android:text="@string/label_es_fumador"
                    android:textColor="@color/md_text"
                    android:textSize="13sp"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:layout_marginRight="15dp"
                    android:textColor="@color/accentt"
                    android:checked="false"
                    android:buttonTint="?attr/colorPrimary"
                    android:id="@+id/checkBox_movil"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.06"/>
            </LinearLayout>

            <Button
                android:background="@color/md_red_700"
                android:id="@+id/eliminar_afiliado_movil"
                android:alpha="0.8"
                android:layout_width="0dp"
                android:layout_weight="0.36"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="0dp"
                android:text="@string/label_eliminar_direccion" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>