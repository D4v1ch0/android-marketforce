<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/oportunidad_gestionando_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/label_gestionando"
            android:id="@+id/textView116"
            android:textColor="@color/color_text_sky_blue"
            android:textStyle="bold"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:paddingRight="8dp"
            android:paddingBottom="5dp"
            android:background="@color/color_grey" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/oportunidad_gestionando" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/label_oportunidades"
            android:id="@+id/oportunidad_numero"
            android:layout_weight="0.6"
            android:gravity="center"
            android:padding="5dp"
            android:background="@color/tab_activated"
            android:textColor="@color/caldroid_white"
            android:drawableLeft="@drawable/oportunidades"
            android:textSize="@dimen/text_medium_small_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/label_meta"
            android:id="@+id/oportunidad_meta"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="5dp"
            android:background="@color/tab_inactivated"
            android:textColor="@color/caldroid_white"
            android:textStyle="bold"
            android:textSize="@dimen/text_medium_small_size" />

    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible">
        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/oportunidad_list"
            android:layout_weight="1"
            android:listSelector="@color/color_background_selector"
            android:choiceMode="singleChoice" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/oportunidad_empty">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/label_no_oportunidades"
            android:id="@+id/textView62"
            android:textSize="@dimen/text_large_size"
            android:textStyle="bold"
            android:textColor="@color/color_text_sky_blue" />
    </LinearLayout>
</LinearLayout>