    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <EditText
            android:id="@+id/obs_etapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="3"
            android:background="@drawable/observaciones_fondo"
            android:padding="3dp"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:gravity="top"
            android:hint="@string/label_agregue_observacion" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/obs_voice_to_text"
            android:src="@drawable/ic_action_mic"
            android:clickable="true"
            android:layout_alignTop="@+id/obs_etapa"
            android:layout_alignRight="@+id/obs_etapa"
            android:layout_alignEnd="@+id/obs_etapa" />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_finalizar_etapa"
        android:id="@+id/finalizar_etapa"
        android:layout_gravity="center_horizontal"
        style="@style/Widget.Button.Theme" />

</LinearLayout>