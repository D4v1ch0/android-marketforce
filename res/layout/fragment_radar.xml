<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:id="@+id/recorrido_dummy"
        android:layout_alignParentTop="true"
        android:background="@color/caldroid_white">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_map"
            android:layout_gravity="center" />
    </FrameLayout>
    <ImageView
        android:id="@+id/radar_refresh"
        style="@style/Widget.Button.Theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="3dp"
        android:src="@drawable/ic_sincronizar"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@color/color_white_maps_list" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/label_1hora"
            android:drawableLeft="@drawable/map_position"
            android:id="@+id/textView51"
            android:gravity="center|right"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/label_24horas"
            android:drawableLeft="@drawable/map_verde"
            android:id="@+id/textView52"
            android:gravity="center|right"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/label_48horas"
            android:drawableLeft="@drawable/map_naranja"
            android:drawablePadding="15dp"
            android:id="@+id/textView55"
            android:gravity="center|right"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/label_mas48horas"
            android:drawableLeft="@drawable/map_rojo"
            android:drawablePadding="15dp"
            android:id="@+id/textView56"
            android:gravity="center|right"
            android:textSize="@dimen/text_small_size"
            android:layout_marginBottom="3dp" />
    </LinearLayout>

</RelativeLayout>
